<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_proxyServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代理服务器设置" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_proxyIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP地址:" />

            <EditText
                android:id="@+id/editText_proxyIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" >
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_proxyPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口号" />

            <EditText
                android:id="@+id/editText_proxyPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_homeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭服务终端设置" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_homeSericeIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP地址:" />

            <EditText
                android:id="@+id/editText_homeSericeIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" >
                
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_homeSericePort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口号" />

            <EditText
                android:id="@+id/editText_homeSericePort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:ems="10" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_homeSericePassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码" />

            <EditText
                android:id="@+id/editText_homeSericePassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="远程虚拟机设置" />
         
         
         
     </LinearLayout>
     
</LinearLayout>